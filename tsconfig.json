{
  "include": [
    "ts-modules"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build/",
    "noImplicitAny": false,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@pages/*": [
        "pages/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@context/*": [
        "context/*"
      ],
      "@store/*": [
        "store/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@custom-types/*": [
        "custom-types/*"
      ]
    }
  }
}